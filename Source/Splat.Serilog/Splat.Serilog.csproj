<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
    <AssemblyName>Splat.Serilog</AssemblyName>
    <RootNamespace>Splat.Serilog</RootNamespace>
    <Version>3.0.0</Version>
    <Authors>Joel Weiss</Authors>
    <Company />
    <Product>Change Tracking</Product>
    <Description>Serilog Integration for Splat.</Description>
    <PackageLicenseUrl>https://github.com/joelweiss/Splat.Serilog/blob/master/License.md</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/joelweiss/Splat.Serilog</PackageProjectUrl>
    <RepositoryUrl>https://github.com/joelweiss/Splat.Serilog</RepositoryUrl>
    <PackageTags>serilog logging splat</PackageTags>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <PackageIconUrl>http://serilog.net/images/serilog-community-nuget.png</PackageIconUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <DebugType>embedded</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="serilog" Version="2.7.1" />
    <PackageReference Include="splat" Version="6.1.1" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta-62925-02" PrivateAssets="All" />
  </ItemGroup>

</Project>
